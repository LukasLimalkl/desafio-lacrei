{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["next", "prettier", "plugin:@next/next/recommended"],

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "off",
    "react/prop-types": "off"
  }
}
