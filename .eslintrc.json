{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
     "next",
    "next/core-web-vitals",
		"prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "off",
    "react/prop-types": "off"
  }
}
